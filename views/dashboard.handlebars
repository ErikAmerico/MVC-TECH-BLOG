{{> navbar}}

<main>
    <h2>Dashboard</h2>
    <a href="/new">Create New Post</a>
    {{#each posts}}
    <div class="post">
        <h3>{{title}}</h3>
        <p>By: {{user.name}}</p>
        <p>{{{content}}}</p>
        <p>Posted on: {{createdAt}}</p>
        <a href="/dashboard/edit/{{id}}">Edit</a>
        <form class="delete-form" action="/dashboard/delete/{{id}}" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit">Delete</button>
        </form>
    </div>
    {{/each}}
</main>

<script src="/public/delete-post.js"></script>